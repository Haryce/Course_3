<!-- [file name]: views/EmployeeEditWindow.xaml -->
<Window x:Class="StoreG5G11.views.EmployeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление сотрудника" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Фамилия:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Text="{Binding LastName}" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="2" Text="Имя:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" Text="{Binding FirstName}" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="4" Text="Отчество:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" Text="{Binding MiddleName}" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="6" Text="Дата рождения:" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="7" SelectedDate="{Binding BirthDate}" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="8" Text="Зарплата:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="9" Text="{Binding Salary}" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>