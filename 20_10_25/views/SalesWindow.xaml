<!-- [file name]: views/SalesWindow.xaml -->
<Window x:Class="StoreG5G11.views.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Оформление продаж" Height="600" Width="1000">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Левая часть: Оформление заказа -->
        <GroupBox Grid.Column="0" Header="Оформление заказа" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Выбор сотрудника -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Сотрудник:" Width="80" VerticalAlignment="Center"/>
                    <ComboBox Name="employeeComboBox" Width="200"/>
                </StackPanel>
                
                <!-- Добавление товара -->
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                        CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Добавить товар в заказ" FontWeight="Bold" Margin="0,0,0,5"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Товар:" Width="80" VerticalAlignment="Center"/>
                            <ComboBox Name="productsComboBox" Width="200"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Количество:" Width="80" VerticalAlignment="Center"/>
                            <TextBox Name="quantityTextBox" Width="50" Text="1"/>
                            <Button Content="Добавить" Margin="10,0,0,0" 
                                    Padding="10,2" Click="AddToOrder_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Текущий заказ -->
                <TextBlock Grid.Row="2" Text="Текущий заказ:" FontWeight="Bold" Margin="0,0,0,5"/>
                
                <DataGrid Grid.Row="3" Name="orderItemsGrid" AutoGenerateColumns="False" 
                          IsReadOnly="True" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat=N2}" Width="80"/>
                        <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Total, StringFormat=N2}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Итого и кнопки -->
                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Удалить" Width="80" Margin="0,0,10,0" Click="RemoveFromOrder_Click"/>
                    <Button Content="Оформить продажу" Width="120" Margin="0,0,10,0" 
                            Background="LightGreen" Click="CompleteSale_Click"/>
                </StackPanel>
                
                <!-- Итого по заказу -->
                <TextBlock Grid.Row="4" Name="orderTotalTextBlock" Text="Итого: 0.00 руб." 
                           FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        
        <!-- Правая часть: Продажи за день -->
        <GroupBox Grid.Column="2" Header="Продажи за сегодня" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Кнопки управления -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <Button Content="Все продажи" Width="100" Margin="5" Click="ShowAllSales_Click"/>
                </StackPanel>
                
                <!-- Список продаж -->
                <DataGrid Grid.Row="1" Name="salesGrid" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Заказ №" Binding="{Binding OrderId}" Width="60"/>
                        <DataGridTextColumn Header="Сотрудник" Binding="{Binding EmployeeName}" Width="150"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding Total, StringFormat=N2}" Width="80"/>
                        <DataGridTextColumn Header="Время" Binding="{Binding SaleDate, StringFormat=HH:mm}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Итого за день и кнопка закрытия -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <TextBlock Name="dailyTotalTextBlock" Text="Выручка за день: 0.00 руб." 
                               FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Button Content="Закрыть" Width="80" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>