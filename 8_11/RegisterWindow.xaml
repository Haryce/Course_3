<Window x:Class="AuthApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Регистрация" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Логин:" FontWeight="Bold"/>
            <TextBox x:Name="UsernameTextBox" Height="25" 
                     Text="{Binding NewUser.Username, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding UsernameValidation}" Foreground="Red" 
                       FontSize="10" Margin="0,2,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox Height="25" 
                     Text="{Binding NewUser.Email, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="{Binding EmailValidation}" Foreground="Red" 
                       FontSize="10" Margin="0,2,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Пароль:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Height="25" 
                         PasswordChanged="PasswordBox_PasswordChanged"/>
            <TextBlock Text="{Binding PasswordValidation}" Foreground="Red" 
                       FontSize="10" Margin="0,2,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Подтверждение пароля:" FontWeight="Bold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="25" 
                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            <TextBlock Text="{Binding ConfirmPasswordValidation}" Foreground="Red" 
                       FontSize="10" Margin="0,2,0,0"/>
        </StackPanel>
        
        <CheckBox Grid.Row="5" Content="Принимаю условия соглашения" 
                  IsChecked="{Binding AcceptTerms}"
                  Margin="0,0,0,15"/>
        
        <Border Grid.Row="6" Background="#FFF0F0F0" 
                Margin="0,10,0,10" Padding="10">
            <TextBlock x:Name="RegisterStatusText" Text="Заполните все поля" 
                       TextWrapping="Wrap" TextAlignment="Center"/>
        </Border>
        
        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" 
                    Width="120" Height="30" Margin="0,0,10,0"
                    IsEnabled="{Binding CanRegister}"/>
            <Button Content="Отмена" Click="CancelButton_Click" 
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>